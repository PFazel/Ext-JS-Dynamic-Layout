<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

    <include file="struts-default.xml"/>

    <package name="default" extends="struts-default">

        <interceptors>

            <interceptor name="exceptionInterceptor" class="exceptionInterceptor"/>

            <interceptor name="i18n" class="i18nInterceptor"/>

            <interceptor name="redirect-after-post" class="redirectAfterPostInterceptor"/>

            <interceptor name="preventCrossSiteScripting" class="preventCrossSiteScriptingInterceptor"/>

            <interceptor name="preventAccess" class="preventAccessInterceptor"/>

            <interceptor name="authentication" class="authenticationInterceptor"/>

            <interceptor-stack name="extdlDefaultStack">
                <interceptor-ref name="exceptionInterceptor"/>
                <interceptor-ref name="i18n"/>
                <interceptor-ref name="redirect-after-post"/>
                <interceptor-ref name="params">
                    <param name="excludeParams">dojo\..*,^struts\..*,token</param>
                </interceptor-ref>
                <interceptor-ref name="servletConfig"/>
                <interceptor-ref name="preventCrossSiteScripting"/>
            </interceptor-stack>

            <interceptor-stack name="extdlWorkflowStack">
                <interceptor-ref name="extdlDefaultStack"/>
                <interceptor-ref name="authentication"/>
                <interceptor-ref name="preventAccess"/>
            </interceptor-stack>

        </interceptors>
    </package>

    <package name="login" namespace="/login" extends="default">
        <default-interceptor-ref name="extdlDefaultStack"/>

        <action name="loginAction" class="loginAction" method="loginPage">
            <result name="input">/WEB-INF/pages/login/loginPage.jsp</result>
            <!--
                        <result name="dispatcher" type="redirect-after-post">
                            <param name="actionName">dispatcherAction</param>
                            <param name="namespace">/dispatcherNamespace</param>
                        </result>
            -->
        </action>

        <action name="login" class="loginAction">
            <interceptor-ref name="createSession"/>
            <interceptor-ref name="tokenSession"/>
            <interceptor-ref name="extdlDefaultStack"/>
            <!--<interceptor-ref name="tokenSession"/>-->
            <result name="input">/WEB-INF/pages/login/loginPage.jsp</result>
            <result>/WEB-INF/pages/login/loginPage1.jsp</result>
            <!--
                        <result name="dispatcher" type="redirect-after-post">
                            <param name="actionName">dispatcherAction</param>
                            <param name="namespace">/dispatcherNamespace</param>
                        </result>
            -->
        </action>

    </package>
</struts>